// Firebase Firestore Security Rules for Smart Roll Call
// This file contains demo security rules for the Firebase project
// WARNING: These rules are for demo purposes only - allow open access

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Demo version - allow access to all user data
    match /users/{userId} {
      allow read, write: if true;

      // Batches collection
      match /batches/{batchId} {
        allow read, write: if true;

        // NEW: Schedules subcollection for multi-schedule courses
        match /schedules/{scheduleId} {
          allow read, write: if true;
        }

        // Students in batches
        match /students/{studentId} {
          allow read, write: if true;

          // Attendance records
          match /attendance/{attendanceId} {
            allow read, write: if true;
          }
        }
      }
    }
    
    // ESP32 Integration Rules (Demo Mode)
    // Allow ESP32 to read student MAC addresses and write attendance
    match /{document=**} {
      // Demo mode: Allow all reads and writes for ESP32 integration
      allow read, write: if true;
    }
  }
}