// Firebase Firestore Security Rules for Smart Roll Call
// This file contains demo security rules for the Firebase project
// WARNING: These rules are for demo purposes only - allow open access

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // CRITICAL: Allow listing collections (not just reading specific documents)
    // Students need to query ALL teachers to find their enrollment numbers
    
    match /users/{userId} {
      // Allow anyone to list all users and read any user document
      allow read, list: if true;
      // Only authenticated users can write
      allow write: if request.auth != null;

      // Batches collection
      match /batches/{batchId} {
        // Allow anyone to list and read batches
        allow read, list: if true;
        allow write: if request.auth != null;

        // NEW: Schedules subcollection for multi-schedule courses
        match /schedules/{scheduleId} {
          allow read, list: if true;
          allow write: if request.auth != null;
        }

        // Students in batches
        match /students/{studentId} {
          // Allow anyone to list and read students (for enrollment matching)
          allow read, list: if true;
          allow write: if request.auth != null;

          // Attendance records (legacy structure for backward compatibility)
          match /attendance/{attendanceId} {
            // Allow anyone to list and read attendance
            allow read, list: if true;
            allow write: if request.auth != null;
          }
        }
      }
    }

    // NEW: Global attendance records collection for schedule-linked attendance
    // This collection stores attendance records linked to specific class schedules
    match /attendance_records/{recordId} {
      allow read, write: if true;
    }

    // NEW: Student profiles collection for student login and enrollment management
    match /student_profiles/{profileId} {
      allow read, write: if true;
    }

    // ESP32 Integration Rules (Demo Mode)
    // Allow ESP32 to read student MAC addresses and write attendance
    match /{document=**} {
      // Demo mode: Allow all reads and writes for ESP32 integration
      allow read, write: if true;
    }
  }
}